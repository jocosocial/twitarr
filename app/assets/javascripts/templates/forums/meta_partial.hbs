<div class="card-section clickable" {{action 'display_forum' model.id model.last_post_page}}  {{!-- Should link to last unread post page, not the first --}}>
  <span class="title big-title">
    {{model.subject}}
    {{#if model.locked}}
      <span class="	glyphicon glyphicon-lock" title="Locked"></span>
    {{/if}}
    {{#if model.sticky}}
      <span class="	glyphicon glyphicon-pushpin" title="Sticky"></span>
    {{/if}}
  </span>
  {{pretty-timestamp model.timestamp}}

  <div class="form">
    {{{posts_sentence}}}
    <div class="controls">
      Most recent: {{pretty-username model.last_post_author.username model.last_post_author.display_name }}
    </div>
  </div>

</div>
